.comment.clearfix
  .content
    %p.comment_content= comment.comment
    %p.comment_author= comment.user.email
    %p{:style => "font-family:courier; font-size:70%;"}
      Publicado há
      \#{time_ago_in_words(comment.created_at)}
  .buttons
    = link_to "Editar", edit_post_comment_path(comment.post, comment)
    = link_to "Deletar", [comment.post, comment], method: :delete, data: { confirm: "Confirmar deleção?" }