<% if @posts.nil? %>
    <div class="alert alert-info mt-3" role="alert">Nenhum tópico no fórum.</div>
  <% else %>
    <% @posts.each do |post| %>
      <p>Tópico:</p>
      <p><%= link_to post.title, post %></p>
      <p>Publicado em:</p>
      <%= time_ago_in_words(post.created_at) %> 
      <p>Autor</p>
      <p><%= post.user.email%></p>
    <% end %>
<% end %><hr>
<%= link_to "New Post", new_post_path %>
